@model PoulSite.Models.Orders

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit My Order Details</h1>
<hr />
<div class="row">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderNo" class="control-label"></label>
                <input asp-for="OrderNo" class="form-control" />
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNo" class="control-label"></label>
                <input asp-for="ContactNo" class="form-control" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
                <br />
                <input type="checkbox" />
                <label class="form-check-label">Set my default address</label>
                <br/>
                <br />
            </div>
        </form>
    </div>
    <div class="col-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="OrderLists" class="control-label"></label>
                <textarea asp-for="OrderLists" class="form-control"></textarea>
                <span asp-validation-for="OrderLists" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeOrdered" class="control-label"></label>
                <input asp-for="DateTimeOrdered" class="form-control" />
                <span asp-validation-for="DateTimeOrdered" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="col-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MOP" class="control-label"></label>
                <select asp-for="MOP" class="form-control" asp-items="Html.GetEnumSelectList<MOPType>()"></select>
                <span asp-validation-for="MOP" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-sm" id="button3" />
            </div>
        </form>
    </div>
</div>

