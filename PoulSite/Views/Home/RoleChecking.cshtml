<style>
    .btn1 {
        background-color: #453835;
        color: white;
        border: none;
        padding: 162px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 40px;
        margin: 2px 2px;
        cursor: pointer;
        font-family: 'Playfair Display', serif;
    }

    .btn2 {
        background-color: #ebe2e1;
        color: #453835;
        border: none;
        padding: 136.5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 38px;
        margin: 2px 2px;
        cursor: pointer;
        font-family: 'Playfair Display', serif;
    }

